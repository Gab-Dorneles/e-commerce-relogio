{
  // Ignore unknown at-rules so Tailwind directives (@tailwind, @apply, @layer) don't show as errors
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "less.lint.unknownAtRules": "ignore",
  // Optional: enable Tailwind CSS IntelliSense if installed
  "tailwindCSS.includeLanguages": {
    "typescript": "html",
    "html": "html"
  }
}
